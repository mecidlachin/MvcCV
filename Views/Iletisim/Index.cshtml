@using MvcCV.Models.Entity
@model List<Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
        /* Özel stil ayarları */
        .full-width-container {
            width: 100%;
            box-sizing: border-box;
            text-align: left;
        }

        .centered-container {
            max-width: 1700px; /* İstediğiniz genişliği ayarlayabilirsiniz */
            margin: 0 auto;
        }

        /* Ek stiller buraya eklenebilir */
    </style>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="table table-bordered">
        <div class="full-width-container">
            <div class="centered-container">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {




                                        <div class="time-label">
                                            <span class="bg-lightblue">
                                              @(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))
                                            </span>
                                        </div><div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i> @item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.Adsoyad</a> @item.Konu</h3>
                                                <div class="timeline-body">
                                                  @item.Mesaj
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>