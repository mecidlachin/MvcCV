@using MvcCV.Models.Entity
@model List<TblHobilerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <br />
            <br />
            <h2>Hobi Düzenleme Sayfası</h2>
            <br />
            <form method="post">
                @foreach (var item in Model)
                {
                    <label>Açıklama 1</label>
                    <textarea rows="6" class="form-control" name="Aciklama1">@item.Aciklama1</textarea>
                    <br />
                    <br />
                    <label>Açıklama 2</label>
                    <textarea rows="6" class="form-control" name="Aciklama2">@item.Aciklama2</textarea>
                }
                <br />
                <br />
                <button class="btn btn-success btn-lg btn-block">Güncelle</button>
            </form>
        </div>
    </div>
</div>
