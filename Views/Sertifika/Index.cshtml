@using MvcCV.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    /* Özel stil ayarları */
    .full-width-container {
        width: 100%;
        box-sizing: border-box;
        text-align: left;
    }

    .centered-container {
        max-width: 1700px; /* İstediğiniz genişliği ayarlayabilirsiniz */
        margin: 0 auto;
    }

    /* Ek stiller buraya eklenebilir */
</style>

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="table table-bordered">
        <div class="full-width-container">
            <div class="centered-container">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div>
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <br />
                                            <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success">
                                             
                                                <span class="bg-success">
                                                    @item.Tarih
                                                </span>
                                                <br />
                                            </a>
                                        </div>
                                        <div>
                                            <br />
                                            <i class="fas fa-comment bg-primary"></i>
                                            <div class="timeline-item">
                                                <div class="timeline-body">
                                                    @item.Aciklama
                                                </div>
                                                <!-- Düzenleme ve Sil butonları eklenebilir -->
                                                <!--
                                                <div class="timeline-footer">
                                                    <a href="#" class="btn btn-primary btn-sm">Düzenle</a>
                                                    <a href="#" class="btn btn-danger btn-sm">Sil</a>
                                                </div>
                                                -->
                                            </div>
                                        </div>
                                    }
                                </div>
                                <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Girişi</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
