@model MvcCV.Models.Entity.TblSosyalMedya

@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<br />
<h4 style="margin-top: 20px;">Sosyal Medya Düzenleme Sayfası</h4>
<br />
<form class="form-control" method="post">
    <br />
    <br />
    @Html.Label("Sosyak Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Ad, "", new { @style = "color: red" })
    <br />
    @Html.Label("Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Link, "", new { @style = "color: red" })
    <br />
    @Html.Label("İkon")
    @Html.TextBoxFor(x => x.ikon, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.ikon, "", new { @style = "color: red" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>



