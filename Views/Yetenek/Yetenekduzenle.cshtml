@model MvcCV.Models.Entity.TblYeteneklerim
@{
    ViewBag.Title = "YetenekDuzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<br />
<h4 style="margin-top: 20px;">Yetenek Düzenleme Sayfası</h4>
<br />
<form class="form-control" method="post">
    <br />
    <br />
    @Html.Label("Yetenek Açıklaması")
    @Html.TextBoxFor(x => x.Yetenek, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Yetenek, "", new { @style = "color: red" })
    <br />
    @Html.Label("Derece")
    @Html.TextBoxFor(x => x.Oran, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Yetenek, "", new { @style = "color: red" })
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>

