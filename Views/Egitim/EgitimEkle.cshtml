@model MvcCV.Models.Entity.TblEgitimlerim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<div style="margin-top: 50px; margin-left: 670px;">
    <!-- Yukarıdan aşağıya 50 piksel boşluk ekleyen div -->
    <h4>Yeni Eğitim Bilgisi Ekleme Sayfası</h4>
</div>
<br />
<br />
<form class="form-control" method="post">
    <div style="margin-top: 50px; text-align: center;">
        <!-- Yukarıdan aşağıya 40 piksel boşluk ekleyen div -->
        @Html.Label("Başlık")
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color: red" })
        <br />
        @Html.Label("Alt Başlık")
        @Html.TextBoxFor(x => x.AltBaslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.AltBaslik, "", new { @style = "color: red" })
        <br />
        @Html.Label("Genel Not Ortalaması (GNO)")
        @Html.TextBoxFor(x => x.GNO, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.GNO, "", new { @style = "color: red" })
        <br />
        @Html.Label("Tarih")
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Tarih, "", new { @style = "color: red" })
        <br />
    </div>
    <div style="margin-top: 30px; text-align: center;">
        <button class="btn btn-info btn-block">Kaydet</button>
    </div>
</form>
